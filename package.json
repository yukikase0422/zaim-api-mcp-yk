{
  "name": "zaim-api-mcp",
  "version": "1.0.0",
  "description": "MCP Server for Zaim API integration with OAuth 1.0a authentication",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "oauth-setup": "tsx scripts/oauth-setup.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "docker:build": "docker build -t zaim-api-mcp .",
    "docker:run": "docker run --rm -i zaim-api-mcp",
    "docker:dev": "docker-compose up --build"
  },
  "keywords": [
    "mcp",
    "server",
    "zaim",
    "api",
    "oauth",
    "personal-finance",
    "household-budget",
    "japan"
  ],
  "author": "Yone Katagiri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yone-k/zaim-api-mcp.git"
  },
  "homepage": "https://github.com/yone-k/zaim-api-mcp#readme",
  "bugs": {
    "url": "https://github.com/yone-k/zaim-api-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.54.0",
    "happy-dom": "^18.0.1",
    "ts-node": "^10.9.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  }
}
